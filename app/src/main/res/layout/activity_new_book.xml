<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.taller_4_pdm.Activities.NewBookActivity"
        android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ingresa_los_datos"
                android:textSize="@dimen/title_size"
                android:textColor="#000"
                android:layout_margin="@dimen/margin_tv"/>

        <EditText
                android:id="@+id/et_titulo"
                android:layout_width= "@dimen/et_width"
                android:layout_height="wrap_content"
                android:hint="@string/titulo"
                android:layout_margin="@dimen/margin_tv"
                android:inputType="text"/>

        <EditText
                android:id="@+id/et_autores"
                android:layout_width= "@dimen/et_width"
                android:layout_height="wrap_content"
                android:hint="@string/autores"
                android:layout_margin="@dimen/margin_tv"
                android:inputType="text"
        />

        <EditText
                android:id="@+id/et_edicion"
                android:layout_width= "@dimen/et_width"
                android:layout_height="wrap_content"
                android:hint="@string/edicion"
                android:layout_margin="@dimen/margin_tv"
                android:inputType="number"/>

        <EditText
                android:id="@+id/et_editorial"
                android:layout_width= "@dimen/et_width"
                android:layout_height="wrap_content"
                android:hint="@string/editoriales"
                android:layout_margin="@dimen/margin_tv"
                android:inputType="text"/>

        <EditText
                android:id="@+id/et_resumen"
                android:layout_width= "@dimen/et_width"
                android:layout_height="wrap_content"
                android:hint="@string/resumen"
                android:layout_margin="@dimen/margin_tv"
                android:inputType="text"/>



        <Button
                android:id="@+id/bt_agregar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/agregar"
                android:inputType="text"/>


    </LinearLayout>


</ScrollView>
